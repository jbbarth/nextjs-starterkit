{
  "name": "hello-next",
  "version": "1.0.0",
  "description": "",
  "main": "server.js",
  "scripts": {
    "lint": "eslint api components pages server.js",
    "lint:fix": "prettier --write api/**js components/**js pages/**js server.js && eslint --fix api components pages server.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "db:migrate": "sequelize db:migrate",
    "babel-node": "babel-node",
    "dev": "NODE_ENV=development nodemon --exec babel-node --presets @babel/preset-env --watch api -- ./server.js & yarn dev:css",
    "dev:css": "postcss styles/index.css --watch --config styles/config/postcss.config.js -o static/css/bundle.css",
    "build": "yarn build:next && yarn build:server && yarn build:css && yarn db:migrate",
    "build:css": "postcss styles/index.css -c styles/config/postcss.config.js -o static/css/bundle.css",
    "build:next": "next build",
    "build:server": "NODE_ENV=production babel server.js --out-dir .next/dist",
    "start": "NODE_ENV=production node .next/dist/server.js",
    "analyze": "cross-env ANALYZE=1 next build"
  },
  "babel": {
    "env": {
      "development": {
        "presets": [
          "next/babel"
        ]
      },
      "production": {
        "presets": [
          "next/babel",
          [
            "@babel/env",
            {
              "targets": {
                "node": "current"
              }
            }
          ]
        ]
      }
    }
  },
  "nodemonConfig": {
    "verbose": false,
    "ignore": [
      "*.test.js"
    ]
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "dependencies": {
    "cross-env": "^5.0.1",
    "dotenv": "^6.0.0",
    "express": "^4.15.2",
    "firebase": "^4.1.3",
    "isomorphic-unfetch": "^2.1.1",
    "lodash": "^4.17.10",
    "next": "^6.1.1",
    "pg": "^7.4.3",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "sequelize": "^4.38.0",
    "sequelize-cli": "^4.0.0",
    "webpack-bundle-analyzer": "^2.8.3"
  },
  "devDependencies": {
    "@babel/cli": "^7.0.0-rc.1",
    "@babel/core": "^7.0.0-rc.1",
    "@babel/node": "^7.0.0-rc.1",
    "@babel/preset-env": "^7.0.0-rc.1",
    "@babel/register": "^7.0.0-rc.1",
    "autoprefixer": "^9.1.0",
    "babel-eslint": "^8.2.6",
    "cssnano": "^4.0.5",
    "eslint": "^5.3.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-config-prettier": "^3.0.1",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jsx-a11y": "^6.1.1",
    "eslint-plugin-prettier": "^2.6.2",
    "eslint-plugin-react": "^7.11.0",
    "husky": "^0.14.3",
    "nodemon": "^1.18.3",
    "postcss-cli": "^6.0.0",
    "postcss-easy-import": "^3.0.0",
    "prettier": "1.13.7",
    "pretty-quick": "^1.6.0",
    "tailwindcss": "^0.6.4"
  }
}
